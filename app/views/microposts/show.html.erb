<% provide(:title, @micropost.title) %>
<div class="row">

  <div class="col-md-8">
      <h3><%= @micropost.title %></h3>
      <h4><%= @micropost.content %></h4>
      <%= image_tag @micropost.picture.url if @micropost.picture? %>

        <% if logged_in? %>
        <% if current_user.following?(@micropost.user) || current_user == @micropost.user %>
          <section class="stats">
            <%= render 'shared/comment_feed' %>
          </section>
          <%end%>   
        <%end%>  

    <section class="stats">
      <%= render 'shared/comment_form' %>
    </section>      
  </div>
</div>